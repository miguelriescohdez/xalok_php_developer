{% extends 'base.html.twig' %}

{% block title %}Edit Trip{% endblock %}

{% block body %}

<div class="form-body">
    <div class="row">
        <div class="form-holder">
            <div class="form-content">
                <div class="form-items">
                    <div class="d-flex align-items-center justify-content-between my-4">
                        <h3 class="mb-3">Edit Trip</h3>
                        {{ include('trip/_delete_form.html.twig') }}
                    </div>
                    {{ form_start(form) }}
                        <div class="col-md-12">
                            {{ form_row(form.date) }}
                        </div>
                        <div class="col-md-12" id="available-vehicles">
                            {{ form_row(form.vehicle) }}
                        </div>
                        <div class="col-md-12" id="available-drivers">
                            {{ form_row(form.driver) }}
                        </div>
                        <div class="d-flex align-items-center justify-content-end mt-4">
                            <button id="submit" class="btn btn-primary mt-2">{{ button_label|default('Update') }}</button>
                        </div>
                    {{ form_end(form) }}
                    <div class="d-flex align-items-center justify-content-center my-4">
                        <a class="btn btn-primary" href="{{ path('app_trip_index') }}">back to list</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}
