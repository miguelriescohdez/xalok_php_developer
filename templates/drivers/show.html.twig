{% extends 'base.html.twig' %}

{% block title %}Drivers{% endblock %}

{% block body %}
    <h1>Drivers</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ driver.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ driver.name }}</td>
            </tr>
            <tr>
                <th>Surname</th>
                <td>{{ driver.surname }}</td>
            </tr>
            <tr>
                <th>License</th>
                <td>{{ driver.license }}</td>
            </tr>
