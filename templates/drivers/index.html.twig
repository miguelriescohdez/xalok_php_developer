{% extends 'base.html.twig' %}

{% block title %}Drivers index{% endblock %}

{% block body %}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mt-4">
        <h1 class="text-light">Drivers index</h1> 
        <a class="btn btn-primary py-2 px-4" href="{{ path('app_drivers_new') }}">Create new</a>
    </div>
    <table class="my-4 table table-light table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Surname</th>
                <th>License</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for driver in drivers %}
            <tr>
                <td>{{ driver.id }}</td>
                <td>{{ driver.name }}</td>
                <td>{{ driver.surname }}</td>
                <td>{{ driver.license }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('app_drivers_edit', {'id': driver.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
